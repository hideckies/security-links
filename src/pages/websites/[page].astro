---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import WebsiteCard from '../../components/WebsiteCard.astro';

export async function getStaticPaths({ paginate }: any) {
    const allWebsites = await getCollection('websites', ({data}) => {
        return data.draft !== true;
    });

    const sortedWebsites = allWebsites.sort((a, b) => {
        return (a.data.pubDate > b.data.pubDate) ? -1 : 1;
    });

    const websites: any[] = [];
    sortedWebsites.map((website) => {
        websites.push({
            website: website
        })
    })

    return paginate(websites, { pageSize: 12 });
}

const { page }: any = Astro.props;

const title = `#All`;
const description = `Page ${page.currentPage} for all websites.`;

const pageNums = Array.from(
    {length: page.lastPage},
    (_, index) => index + 1
);
---

<BaseLayout title={title} description={description}>
    <main class="mx-auto w-11/12 md:w-2/3 min-h-screen px-4 flex flex-col items-center gap-y-2">
        <div class="mx-auto w-full md:w-1/3 flex items-center justify-center text-base">
            <div class="flex-1 flex justify-center">
                {page.url.prev ? (
                    <a href={page.url.prev}>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width={2.5}
                            stroke="currentColor"
                            class="w-6 h-6"
                        >
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                        </svg>
                    </a>
                ) : null}
            </div>
            <div class="flex flex-col items-center">
                <h2>{title}</h2>
                <span class="text-xl font-bold">{page.currentPage}</span>
            </div>
            <div class="flex-1 flex justify-center">
                {page.url.next ? (
                    <a href={page.url.next}>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width={2.5}
                            stroke="currentColor"
                            class="w-6 h-6"
                        >
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                        </svg>
                    </a>
                ) : null}
            </div>
        </div>
        <ul class="mx-auto my-6 w-full grid grid-cols-1 md:grid-cols-3 auto-rows-auto gap-y-4 md:gap-x-4 md:gap-y-8">
            {page.data.map(({ website }: any) => (
                <li class="w-full">
                    <WebsiteCard website={website} />
                </li>
            ))}
        </ul>
    </main>
</BaseLayout>