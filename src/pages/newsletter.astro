---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import gentlemanMailboxImage from "../assets/images/gentleman-mailbox.png";
import NewsletterForm from "../components/NewsletterForm.astro";

const title = "Subscribe Newsletter";
const description = "Stay up to date.";
---

<BaseLayout title={title} description={description}>
    <main class="mt-8 w-full min-h-screen px-2 flex flex-col items-center gap-y-6">
        <h2 class="text-center">{title}</h2>
        <div class="relative w-[200px] md:w-[240px] h-[200px] md:h-[240px]">
            <div class="absolute top-0 left-0 w-full h-full backdrop-sepia"></div>
            <Image src={gentlemanMailboxImage} alt="gentleman" class="w-full h-full object-cover" />
        </div>
        <div class="md:mx-auto w-full md:w-2/3 flex flex-col gap-y-8">
            <div class="w-full flex flex-col gap-y-4">
                <h3>Stay up to date</h3>
            </div>
        </div>
        <div class="md:mx-auto w-full md:w-1/2 flex flex-col items-center justify-center">
            <!-- <iframe class="subscribe-newsletter w-full min-h-[600px]" src="https://cdn.forms-content-1.sg-form.com/a5830a31-95bd-11ee-817f-b62d225cc26f"/> -->
            <!-- <NewsletterForm /> -->
        </div>
    </main>
</BaseLayout>
