---
const siteName = "The OffSec Library";
const url = "https://theoffseclibrary.hdks.org/";
const socialImageURL = `${url}images/preview.png`;
const socialUsername = "@hideckies";

const { title, description } = Astro.props;
---

<meta property="og:title" content={title} />
<meta property="og:type" content="website"/>
<meta property="og:url" content={url} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:site_name" content={siteName} />
<meta property="og:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:description" content={description} />
<meta name="twitter:title" content={title} />
<meta name="twitter:site" content={socialUsername} />
<meta name="twitter:image" content={socialImageURL} />
<meta name="twitter:creator" content={socialUsername} />